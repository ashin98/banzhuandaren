.u-popup {
  width: 100%;
}
.dialog {
  width: 100%;
}
.dialog .title {
  margin-top: 30rpx;
  height: 40rpx;
  font-size: 46rpx;
  font-weight: 700;
  text-align: center;
  line-height: 46rpx;
}
.dialog .input {
  margin-top: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.dialog .input .time {
  margin-left: 30rpx;
  width: 200rpx;
  font-size: 44rpx;
  font-weight: 600;
}
.dialog .input .val {
  display: flex;
  margin-right: 30rpx;
  margin-top: 20rpx;
}
.dialog .input .val .u--input {
  width: 100rpx;
  height: 80rpx;
  margin-right: 30rpx;
}
.dialog .input .val .min {
  font-size: 44rpx;
  font-weight: 600;
}
.dialog .btn {
  display: flex;
  background-color: #fff;
  margin-top: 100rpx;
  margin-bottom: 40rpx;
  width: 600rpx;
  height: 100rpx;
}
.dialog .btn .cancel {
  width: 180rpx;
  height: 80rpx;
  margin-right: -176rpx;
  background-color: #fef7dd;
  border-radius: 50rpx 0 0 50rpx;
  text-align: center;
  line-height: 80rpx;
}
.dialog .btn .confirm {
  width: 180rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background-color: #fad556;
  border-radius: 0rpx 50rpx 50rpx 0rpx;
}

